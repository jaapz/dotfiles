# General settings
set mbox_type = Maildir
set from = "jaapz.b@gmail.com"
alternates jaap@broekhuizen.nu broekhuizen@baopt.nl
set realname = "Jaap Broekhuizen"
set smtp_url = "smtp://jaapz.b@smtp.gmail.com:587/"
set tilde
set include
set reverse_name
set reply_to
set forward_quote

# Gmail folders
# set folder = "imaps://imap.gmail.com:993"
set folder = ~/.maildir
set spoolfile = "+INBOX"
set postponed = "+[Gmail]/Drafts"
set trash = "+[Gmail].Trash"
unset record

mailboxes +INBOX \
          +Afstuderen \
          +BaOpt \
          +Persoonlijk \
          +Github \
          +[Gmail].Trash \


# Local directories
set header_cache = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set certificate_file = ~/.mutt/certificates

set move = no  #Stop asking to "move read messages to mbox"!
set imap_keepalive = 900

# Sorting
set sort_aux=last-date-received
set sort=reverse-threads

# Split-pane message viewing
set pager_index_lines = 10

# Keybindings
bind editor <space> noop
bind index <tab> previous-new-then-unread
bind pager <tab> previous-new-then-unread
macro index d "<purge-message>" "Purge mail locally and remote"

# Colorscheme
source ~/.mutt/vombatidae-mutt/vombatidae.mutt

# Signature
set signature = "~/.signature"
set sig_on_top = yes

set check_new = yes
set timeout = 15
set mail_check = 30

# Sidebar
set sidebar_delim   = ' │ '
set sidebar_visible = yes
set sidebar_width   = 24
color sidebar_new color221 color233
bind index,pager J   sidebar-next
bind index,pager K     sidebar-prev
bind index,pager L  sidebar-open

# Statusline
set status_chars  = " *%A"
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"

# HTML Mail view
auto_view text/html
alternative_order text/plain text/enriched text/html

source "openssl aes-256-cbc -d -salt -in ~/.mutt-passwords |"
