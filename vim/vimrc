" Jaapz's vim config.
"
filetype off

" Load pathogen plugin management
call pathogen#runtime_append_all_bundles()
call pathogen#infect()
call pathogen#helptags()

source ~/.vim/plugins/autotag.vim

" Random basic settings
let mapleader = ","
set number " Always show line numbers
set nocompatible " No vi compatibility
set cursorline " Highlight current line
set so=5

" Auto-make latex
map <leader>b <Esc>:make pdf<CR><CR><CR>

" Search settings
set hlsearch
set incsearch

" Split the Correct(tm) way.
set splitright

" Conceallevels
set conceallevel=2
let g:syntax_js=['function', 'return', 'semicolon', 'proto']
set foldmethod=syntax

" Pythonic indents
set shiftwidth=4
set autoindent
set smarttab
set expandtab
set tabstop=4
set softtabstop=4

" Correct unicode encoding
set encoding=utf-8
set termencoding=utf-8
set laststatus=2
set cursorline

" Ignore uneccessary files
set wildignore+=__pycache__
set wildignore+=*.pyc
set wildignore+=node_modules
set wildignore+=*/app/cache/*
set wildignore+=*/vendor/*

" Show max text width
set textwidth=80
set colorcolumn=80

" Only wrap comments
set formatoptions-=t

" No backups and swapfiles
set noswapfile
set nowritebackup 

" Gui (gVim) options
set guioptions-=m " No menu bar
set guioptions-=T " No toolbar
set guioptions-=r " No right-hand side scrollbar
set guioptions-=L " No left-hand side scrollbar
set linespace=3 " Nicer lineheight
set guifont=Monospace\ 10

" Why is this not default.
set backspace=indent,eol,start

" Hack to make sure F11 also works in gVim
map <silent> <F11>
\    :call system("wmctrl -ir " . v:windowid . " -b toggle,fullscreen")<CR>

" Enable colorscheme and 256 colors
colorscheme molokai
syntax on
set t_Co=256

" Vim-airline config
let g:airline_left_sep=''
let g:airline_right_sep=''
let g:airline_theme='molokai'
let g:bufferline_echo=0
set laststatus=2 " Always show statusline
set noshowmode

" CtrlP config
let g:ctrlp_max_height = 20
map <leader>t :CtrlPTag<cr>
map <C-b> :CtrlPBuffer<CR>


" Enable pyflakes
filetype on
filetype plugin indent on

" Python mode settings
let g:pymode_lint_checker = "pyflakes,pylint,pep8"
let g:pymode_lint_cwindow = 0
let g:pymode_lint_ignore = "F0401"

" Neocomplete
autocmd FileType css setlocal omnifunc=csscomplete#CompleteCSS
autocmd FileType html,markdown setlocal omnifunc=htmlcomplete#CompleteTags
autocmd FileType python setlocal omnifunc=pythoncomplete#Complete

let g:neocomplete#enable_at_startup = 1
set completeopt-=preview

" NERDTree
noremap <leader>z <Esc>:NERDTreeToggle<CR>
noremap <leader>a <Esc>:NERDTreeFind<CR>

" Buffers
noremap <leader>/ <Esc>:bn<CR>
noremap <leader>. <Esc>:bp<CR>
noremap <leader>o <Esc>:bd<CR>

" Undo/Redo
noremap <leader>u <Esc>:undo<CR>
noremap <leader>r <Esc>:redo<CR>

noremap <leader>s <Esc>:w<CR>
inoremap <leader>s <Esc>:w<CR>
vnoremap <leader>s <Esc>:w<CR>

" Save file as sudo
ca w!! %!sudo tee %

" Handy commands
com W w

" Copy and Paste to system clipboard
vmap <leader>c "+y
vmap <leader>x "+c
map <leader>v <Esc>v"+p

" Unmap arrow keys
map <Left> <Nop>
map <Right> <Nop>
map <Up> <Nop>
map <Down> <Nop>
