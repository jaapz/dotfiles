call pathogen#runtime_append_all_bundles()
call pathogen#helptags()
call pathogen#infect()

" Random basic settings
let g:tagbar_usearrows = 1
let mapleader = ","
set mouse=a
set shiftwidth=4
set number
set autoindent
set smarttab
set tabstop=4
set expandtab
set incsearch
set hlsearch
set noswapfile
set nowritebackup 
set nocompatible
set encoding=utf-8
set termencoding=utf-8
set laststatus=2
set cursorline
set textwidth=120

" Show git status in statusline
set statusline+=%{fugitive#statusline()}

" Enable colorscheme and 256 colors
colorscheme molokai
syntax on
set term=xterm-256color
set t_Co=256

" Vim powerline config
let g:Powerline_symbols = 'unicode'
let g:Powerline_colorscheme = 'solarized256'

" Enable pyflakes
filetype on
filetype plugin on

" TagBar
noremap <leader>l <Esc>:TagbarToggle<CR>
noremap <leader>c <Esc>:TagbarShowTag<CR>

" NERDTree
noremap <leader>z <Esc>:NERDTreeToggle<CR>
noremap <leader>a <Esc>:NERDTreeFind<CR>

" CommandT
noremap <leader>t <Esc>:CommandT<CR>

" Tabs
noremap <leader>/ <Esc>:tabn<CR>
noremap <leader>. <Esc>:tabp<CR>
noremap <leader>p <Esc>:tabnew<CR>
noremap <leader>o <Esc>:close<CR>

" Undo/Redo
noremap <leader>u <Esc>:undo<CR>
noremap <leader>r <Esc>:redo<CR>
