function syncer() {
    if [ -n $1 ]; then
        ENV=$1
    else
        ENV='prod'
    fi

    cd ~/programmeren/syncer
    export SYNCER_ENV=$ENV
    activate .syncer_env
    pynt setup
}

function mbo() {
    if [ -n $1 ]; then
        ENV=$1
    else
        ENV='prod'
    fi

    cd ~/programmeren/mijnbaopt
    export MIJNBAOPT_ENV=$ENV
    export MIJNBAOPT_DIR='/home/jaapz/programmeren/mijnbaopt'
    export MIJNBAOPT_VENV='/home/jaapz/programmeren/mijnbaopt/.env'
    activate
}

function bam() {
    if [ -n $1 ]; then
        ENV=$1
    else
        ENV='prod'
    fi

    cd ~/programmeren/account-manager
    export ACCOUNTMANAGER_ENV=$ENV
    activate
}
